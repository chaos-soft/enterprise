{
    "/etc/ssh/sshd_config": {
        "append": [
            "PasswordAuthentication no"
        ]
    },
    "/root/.bashrc": {
        "append": [
            "PS1='$? \\[\\e[1;32m\\]\\w\\[\\e[m\\] $(date +%H:%M:%S) # '",
            "alias cl='clear'",
            "alias dc='docker compose'",
            "alias pb='polina.py ~/server/polina.json backup'",
            "alias pcl='polina.py ~/server/polina.json check_lines'",
            "alias pr='polina.py ~/server/polina.json rebuild'",
            "export PATH=~/python/tools:$PATH"
        ]
    }
}
